@import 'includes/colors.styl'
@import keyframes
@import animations
@import transitions
@import helpers
@import toasts
@import cards
@import digits
@import buttons

.nuxt-progress
  top 50px !important

html, body
  background-color squeeze

.page
  margin-top 52px

.container-640
  max-width 640px
  margin auto

.container-480
  max-width 480px
  margin auto

.container-320
  max-width 320px
  margin auto

.box
  box-shadow rgba(0, 0, 0, 0.05) 0px 1px 2px 0px
  border-color rgb(218, 225, 233)
  border-width 1px
  border-radius 4px
  border-style solid

.navbar-item img.avatar
  max-height 32px !important

.navbar-item, .button
  user-select none

.navbar-dropdown
  animation zoom-in 0.1s ease 0s both
  .navbar-item
    animation slide-in-top 0.1s ease 0s both
    for i in 1..10
      &:nth-child({i})
        animation-delay unit(0.02 * i, 's')
  &.is-closing
    animation zoom-out 0.1s ease 0.1s both
    .navbar-item
      animation-delay 0s !important
      animation slide-out-top 0.1s ease 0s both

.yt-bg
  background-size cover
  background-position 50% 50%
