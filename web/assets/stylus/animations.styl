.ani-slide-in
  animation slide-in 0.2s ease 0s both

.ani-slide-in-left
  animation slide-in-left 0.2s ease 0s both

.ani-slide-in, .ani-slide-in-left, .ani-slide-in-top
  for i in 1..10
    &.delay-{i}
      animation-delay unit(0.05 * i, 's')

.ani-slide-in-top
  animation slide-in-top 0.2s ease 0s both
