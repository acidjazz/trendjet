.digits .digit
  display inline-flex
.digits
  display inline-flex
  overflow hidden
  .digit-enter-active ,.digit-leave-active
    transition all .1s ease
.digit-enter
  transform translate(0, -20%)
.digit-leave-to
  transform translate(0, 20%)
.digit-enter
  opacity 0
.digit-leave-to
  opacity 0.5
