.progress-bar
  position relative
  overflow hidden
  background-color zircon
  transition height 0.6s ease-in

  .progress-bar-complete
    top 0
    left 0
    position absolute
    height 100%
    background-color malibu
    transition width 1s linear

  .progress-bar-gradient
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background linear-gradient(90deg, rgba(zircon, 1), rgba(white, 0.5))
    animation progress-bar-gradient 2s 0s ease-in-out infinite

@keyframes progress-bar-gradient
  from
    left -100%
  to
    left 100%
