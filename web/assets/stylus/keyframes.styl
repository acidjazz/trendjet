@keyframes slide-in
  0%
    opacity 0
    transform translate(40px, 0)
  100%
    opacity 1
    transform translate(0, 0)

@keyframes slide-in-left
  0%
    opacity 0
    transform translate(40px, 0)
  100%
    opacity 1
    transform translate(0, 0)

@keyframes slide-in-top
  0%
    opacity 0
    transform translate(0, -40px)
  100%
    opacity 1
    transform translate(0, 0)


