#messages
  display flex
  flex-flow column
  flex-direction column-reverse
  position fixed
  top 80px
  right 30px
  z-index 40
  width 460px
  .message
    transition all 0.3s ease
    margin-bottom 1.5rem
    position relative
  .message-body > .delete
    opacity 0
    transition opacity 0.2s ease-in
    position absolute
    top 0.25rem
    right 0.25rem
  .message-body:hover > .delete
    opacity 1

@media all and (min-width: 1px) and (max-width: 1000px)
  #messages
    width calc(100% - 60px)
    .message-body > .delete
      opacity 1
